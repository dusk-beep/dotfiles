#custom fusnction to cd or nvim
ff() {
  local selection=$(fd | fzf --height=40% --border)
  if [ -z "$selection" ]; then
    echo "No selection made"
    return
  fi

  if [ -f "$selection" ]; then
    nvim "$selection"
  elif [ -d "$selection" ]; then
    cd "$selection"
  else
    echo "Invalid selection"
  fi
}


get_raw_url() {
  local url=$1
  raw_url=$(echo "$url"| sed 's|github.com|raw.githubusercontent.com|' )
  raw_url=$(echo "$raw_url" | sed 's|/blob||')
  echo "$raw_url"
}

# Calling the function with a positional argument
get_raw_url "$1"


